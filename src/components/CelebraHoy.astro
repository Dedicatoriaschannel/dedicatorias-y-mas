---
import { getNextUpcomingEvent, formatDateSpanish, formatDaysUntil } from '../utils/eventCalculator';
import ButtonPrimary from './ButtonPrimary.astro';

// Recupera l'evento
const upcomingData = getNextUpcomingEvent();
const { event, date, daysUntil } = upcomingData;
---

<section class="py-20 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-brand-gold/5 to-transparent pointer-events-none"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-4xl h-64 bg-brand-gold/5 rounded-full blur-[100px] pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    
    <div class="max-w-4xl mx-auto p-4 md:p-8">
      
      <div class="flex items-center gap-4 mb-8 animate-fade-in">
        <div class="w-14 h-14 bg-[#FFD700] rounded-2xl flex items-center justify-center shadow-lg shadow-brand-gold/20">
          <svg class="w-7 h-7 text-brand-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-brand-gold font-bold text-lg tracking-wide uppercase leading-none mb-1">CELEBRA HOY</h3>
          <p class="text-white/50 text-sm font-light">Pr√≥ximo evento especial</p>
        </div>
      </div>

      <h2 style="font-family: 'Great Vibes', cursive;" class="text-7xl md:text-9xl text-transparent bg-clip-text bg-gradient-to-r from-[#D4AF37] via-[#F8E79C] to-[#D4AF37] drop-shadow-sm mb-6 leading-none animate-fade-in delay-100 pb-2">
        {event.title}
      </h2>

      <p class="text-xl text-gray-300 max-w-2xl mb-10 font-light leading-relaxed animate-fade-in delay-200 italic">
        {event.description}
      </p>

      <div class="flex flex-wrap items-center gap-4 mb-12 animate-fade-in delay-300">
        
        <div class="flex items-center gap-2 px-6 py-3 bg-white/5 rounded-xl border border-white/10 backdrop-blur-md">
          <svg class="w-5 h-5 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span class="text-brand-gold font-bold text-lg">{formatDateSpanish(date)}</span>
        </div>

        <div class="flex items-center gap-2 px-6 py-3 bg-[#FFD700] rounded-xl text-brand-black shadow-lg shadow-brand-gold/20">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="font-bold text-lg">{formatDaysUntil(daysUntil)}</span>
        </div>

      </div>

      <div class="flex flex-col sm:flex-row gap-5 animate-fade-in delay-500">
        
        <ButtonPrimary 
          text="Ver Videos del Evento" 
          href={`/videos?tag=${event.slug}`} 
          className="!bg-[#FFD700] !text-brand-black !shadow-none hover:!bg-[#F8E79C] w-full sm:w-auto justify-center"
        >
          <svg slot="icon" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
          </svg>
        </ButtonPrimary>

        <ButtonPrimary 
          text="Compartir por WhatsApp" 
          onClick={`window.open('https://wa.me/?text=${encodeURIComponent(`¬°Faltan ${daysUntil} d√≠as para ${event.title}! üéâ Mira estos videos: https://dedicatoriasymas.com`)}', '_blank')`}
          className="!bg-[#FFD700] !text-brand-black !shadow-none hover:!bg-[#F8E79C] w-full sm:w-auto justify-center"
        >
          <svg slot="icon" class="w-6 h-6 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
        </ButtonPrimary>

      </div>

    </div>
  </div>
</section>