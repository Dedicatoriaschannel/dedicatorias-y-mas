---
import VideoCard from './VideoCard.astro';
import ButtonPrimary from './ButtonPrimary.astro';
import type { Video } from '../data/mockVideos';

interface Props {
  videos: Video[];
  title?: string;
  subtitle?: string;
  showViewAll?: boolean;
  viewAllLink?: string;
}

const { 
  videos, 
  title, 
  subtitle,
  showViewAll = false,
  viewAllLink = '/videos'
} = Astro.props;
---

<section class="py-20 relative">
  <div class="container mx-auto px-4">
    {/* Section Header */}
    {(title || subtitle) && (
      <div class="mb-12 text-center max-w-3xl mx-auto">
        {subtitle && (
          <span class="block font-['Great_Vibes'] text-3xl md:text-4xl text-brand-gold mb-2 animate-fade-in">
            {subtitle}
          </span>
        )}
        {title && (
          <h2 class="font-display text-4xl md:text-5xl font-bold text-white mb-4 animate-fade-in delay-100">
            {title}
          </h2>
        )}
      </div>
    )}

    {/* Video Grid */}
    {videos.length > 0 ? (
      <>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 md:gap-8 mb-12">
          {videos.map((video, index) => (
            <div class={`animate-fade-in`} style={`animation-delay: ${index * 50}ms`}>
              <VideoCard video={video} />
            </div>
          ))}
        </div>

        {/* View All Button */}
        {showViewAll && (
          <div class="flex justify-center animate-fade-in delay-500">
            <ButtonPrimary 
              text="Ver Todos los Videos"
              href={viewAllLink}
            />
          </div>
        )}
      </>
    ) : (
      /* Empty State */
      <div class="text-center py-16 bg-white/5 rounded-2xl border border-white/10 backdrop-blur-sm">
        <div class="w-20 h-20 mx-auto mb-6 bg-brand-gold/10 rounded-full flex items-center justify-center">
          <svg class="w-10 h-10 text-brand-gold/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="font-display text-2xl font-semibold text-white/70 mb-2">
          No hay videos disponibles
        </h3>
        <p class="text-white/50 mb-8">
          Pronto agregaremos contenido nuevo a esta secci√≥n
        </p>
        <div class="flex justify-center">
          <ButtonPrimary 
            text="Volver al Inicio"
            href="/"
          />
        </div>
      </div>
    )}
  </div>
</section>