---
interface Props {
  text: string;
  href?: string;
  onClick?: string;
  className?: string; // Opzionale per aggiungere margini extra
}

const { text, href, onClick, className = '' } = Astro.props;
const Element = href ? 'a' : 'button';
---

<Element 
  href={href}
  onclick={onClick}
  class:list={["btn-primary group", className]}
>
  <span class="relative z-10 flex items-center gap-2 justify-center">
    {text}
    <slot name="icon" /> </span>
</Element>

<style>
  .btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #D4AF37 0%, #E5C158 100%);
    color: #0F0F0F;
    padding: 20px 40px; /* px-10 py-5 desktop */
    font-weight: 700;
    font-size: 1.125rem; /* text-lg */
    border-radius: 1rem; /* rounded-2xl */
    box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
  }

  /* Effetto Luce (Shine) */
  .btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.6s ease;
    z-index: 1;
  }

  .btn-primary:hover::before {
    left: 100%;
  }

  /* Effetto Lift & Ombra */
  .btn-primary:hover {
    box-shadow: 0 10px 35px rgba(212, 175, 55, 0.6);
    transform: translateY(-3px);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .btn-primary {
      padding: 16px 32px;
      font-size: 1rem;
      width: 100%; /* Su mobile spesso Ã¨ meglio full width o quasi */
      max-width: 300px;
    }
  }
</style>