---
import type { Video } from '../data/mockVideos';
import { getCategoryBySlug } from '../data/categories';

interface Props {
  video: Video;
}

const { video } = Astro.props;
const category = getCategoryBySlug(video.category);

// Formattazione numeri (es. 1500 -> 1.5K)
const formattedViews = new Intl.NumberFormat('es-ES', { 
  notation: "compact",
  maximumFractionDigits: 1
}).format(video.views);

// Logica per il link WhatsApp
const whatsappLink = `https://wa.me/?text=${encodeURIComponent(`¡Mira este video! "${video.title}" - https://dedicatoriasymas.com/video/${video.slug}`)}`;
---

<article class="group relative block bg-brand-black/40 rounded-2xl overflow-hidden border border-white/5 hover:border-brand-gold/50 transition-all duration-500 hover:shadow-[0_0_30px_rgba(212,175,55,0.15)] hover:-translate-y-2">
  
  <a href={`/video/${video.slug}`} class="block relative aspect-video overflow-hidden">
    <img 
      src={video.thumbnail} 
      alt={video.title} 
      class="object-cover w-full h-full group-hover:scale-110 transition-transform duration-700 ease-in-out" 
      loading="lazy"
    />
    
    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-60 group-hover:opacity-40 transition-opacity"></div>
    
    <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10 pointer-events-none">
      <div class="w-14 h-14 rounded-full bg-brand-gold/90 backdrop-blur-md flex items-center justify-center text-brand-black shadow-lg transform scale-50 group-hover:scale-100 transition-transform duration-300">
        <svg class="w-6 h-6 ml-1" fill="currentColor" viewBox="0 0 24 24">
          <path d="M8 5v14l11-7z"/>
        </svg>
      </div>
    </div>

    <span class="absolute bottom-3 right-3 px-2 py-1 bg-black/80 backdrop-blur-md border border-white/10 text-brand-gold text-xs font-bold rounded-lg shadow-lg z-20">
      {video.duration}
    </span>
    
    {category && (
      <div class="absolute top-3 left-3 px-2 py-1 bg-brand-gold/90 text-brand-black text-xs font-bold rounded-lg shadow-lg uppercase tracking-wide z-20 flex items-center gap-1">
        <span class="w-4 h-4 block" set:html={category.icon}></span>
        <span class="hidden sm:inline">{category.title}</span>
      </div>
    )}
  </a>

  <a 
    href={whatsappLink}
    target="_blank"
    class="absolute top-3 right-3 w-9 h-9 bg-white/10 hover:bg-[#25D366] backdrop-blur-md rounded-full flex items-center justify-center text-white transition-all duration-300 opacity-0 group-hover:opacity-100 hover:scale-110 z-30 shadow-lg"
    title="Compartir en WhatsApp"
    onclick="event.stopPropagation();" 
  >
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
    </svg>
  </a>

  <div class="p-5 relative">
    <div class="absolute -top-12 left-0 right-0 h-12 bg-gradient-to-b from-transparent to-brand-black/60 pointer-events-none"></div>
    
    <h3 class="font-serif text-xl font-bold text-white mb-3 group-hover:text-brand-gold transition-colors line-clamp-2 leading-tight">
      <a href={`/video/${video.slug}`}>
        {video.title}
      </a>
    </h3>
    
    <div class="flex items-center justify-between text-sm text-white/40 group-hover:text-white/60 transition-colors">
      <span class="flex items-center gap-1.5">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        {formattedViews} vistas
      </span>
      
      <a href={`/video/${video.slug}`} class="text-brand-gold font-medium text-xs uppercase tracking-wider group-hover:translate-x-1 transition-transform flex items-center">
        Ver <span class="hidden sm:inline ml-1">Video</span> →
      </a>
    </div>
  </div>
</article>