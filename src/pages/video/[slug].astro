---
import Layout from '../../layouts/Layout.astro';
import ButtonPrimary from '../../components/ButtonPrimary.astro';
import { MOCK_VIDEOS, getVideosByCategory } from '../../data/mockVideos';
import { getCategoryBySlug } from '../../data/categories';

export async function getStaticPaths() {
  return MOCK_VIDEOS.map(video => ({
    params: { slug: video.slug },
    props: { video },
  }));
}

const { video } = Astro.props;
const category = getCategoryBySlug(video.category);

// Video correlati (stessa categoria, escluso quello attuale)
const relatedVideos = getVideosByCategory(video.category)
  .filter(v => v.id !== video.id)
  .slice(0, 4);

const formattedDate = new Date(video.publishedAt).toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Link per condivisione WhatsApp
const shareText = `¡Mira este video hermoso! "${video.title}"`;
const shareUrl = `https://dedicatoriasymas.com/video/${video.slug}`;
const whatsappLink = `https://wa.me/?text=${encodeURIComponent(shareText + ' ' + shareUrl)}`;

// Formattazione visualizzazioni
const formattedViews = new Intl.NumberFormat('es-ES', { notation: "compact", maximumFractionDigits: 1 }).format(video.views);
---

<Layout 
  title={video.title} 
  description={video.description}
  image={video.thumbnail}
>
  <article class="pt-24 pb-12 min-h-screen bg-[#0F0F0F]">
    <div class="container mx-auto px-4">
      
      <nav class="flex items-center gap-2 text-sm text-white/40 mb-8 font-light overflow-x-auto whitespace-nowrap pb-2">
        <a href="/" class="hover:text-brand-gold transition-colors">Inicio</a>
        <span>/</span>
        <a href={`/categoria/${category?.slug}`} class="hover:text-brand-gold transition-colors">{category?.title}</a>
        <span>/</span>
        <span class="text-white/80 truncate">{video.title}</span>
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
        
        <div class="lg:col-span-2">
          
          <div class="relative aspect-video rounded-2xl overflow-hidden shadow-[0_0_50px_rgba(212,175,55,0.15)] mb-8 bg-black border border-brand-gold/10 group">
            {video.youtubeId ? (
              <iframe 
                width="100%" 
                height="100%" 
                src={`https://www.youtube.com/embed/${video.youtubeId}?autoplay=1&rel=0&modestbranding=1`} 
                title={video.title}
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen
                class="absolute inset-0"
              ></iframe>
            ) : (
              /* Fallback Mock se non c'è ID YouTube */
              <div class="relative w-full h-full group cursor-pointer">
                <img src={video.thumbnail} alt={video.title} class="w-full h-full object-cover opacity-60 group-hover:opacity-40 transition-opacity duration-500" />
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="w-24 h-24 bg-brand-gold/90 rounded-full flex items-center justify-center pl-2 shadow-[0_0_40px_rgba(212,175,55,0.6)] animate-pulse group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-12 h-12 text-brand-black" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </div>
                </div>
              </div>
            )}
          </div>

          <div class="mb-8 border-b border-white/10 pb-8">
            <h1 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
              {video.title}
            </h1>
            
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6">
              <div class="flex items-center gap-6 text-white/50 text-sm font-light">
                <span class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  {formattedViews} vistas
                </span>
                <span class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  {formattedDate}
                </span>
              </div>

              <div class="flex-shrink-0">
                <ButtonPrimary 
                  text="Compartir en WhatsApp"
                  href={whatsappLink}
                  onClick={`window.open('${whatsappLink}', '_blank')`}
                  className="!py-3 !px-6 !text-sm w-full sm:w-auto justify-center"
                >
                  <svg slot="icon" class="w-5 h-5 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                  </svg>
                </ButtonPrimary>
              </div>
            </div>
          </div>

          <div class="bg-white/5 rounded-2xl p-6 md:p-8 border border-white/5 mb-8">
            <h3 class="font-serif font-bold text-brand-gold mb-4 text-xl">Mensaje Especial</h3>
            <p class="text-gray-300 leading-relaxed whitespace-pre-line font-light text-lg">
              {video.description}
            </p>
            
            <div class="flex flex-wrap gap-2 mt-6 pt-6 border-t border-white/5">
              {video.tags.map(tag => (
                <span class="px-4 py-1.5 bg-brand-black border border-brand-gold/20 rounded-full text-brand-gold/80 text-sm hover:text-brand-gold hover:border-brand-gold/50 transition-colors cursor-default">
                  #{tag}
                </span>
              ))}
            </div>
          </div>
        </div>

        <div class="lg:col-span-1">
          <div class="sticky top-28">
            <div class="flex items-center gap-3 mb-6">
              <div class="h-8 w-1 bg-brand-gold rounded-full"></div>
              <h3 class="font-display text-2xl font-bold text-white">
                Quizás te interese
              </h3>
            </div>
            
            <div class="flex flex-col gap-4">
              {relatedVideos.map(relVideo => (
                <a href={`/video/${relVideo.slug}`} class="group flex gap-4 bg-[#151515] p-3 rounded-xl hover:bg-[#1A1A1A] transition-all duration-300 border border-transparent hover:border-brand-gold/20">
                  <div class="relative w-36 aspect-video flex-shrink-0 rounded-lg overflow-hidden bg-black">
                    <img src={relVideo.thumbnail} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" loading="lazy" />
                    <span class="absolute bottom-1 right-1 bg-black/80 backdrop-blur-sm text-[10px] text-brand-gold font-bold px-1.5 py-0.5 rounded">
                      {relVideo.duration}
                    </span>
                  </div>
                  <div class="flex-grow min-w-0 py-1">
                    <h4 class="text-white font-medium text-sm line-clamp-2 leading-snug group-hover:text-brand-gold transition-colors mb-2 font-serif">
                      {relVideo.title}
                    </h4>
                    <p class="text-white/40 text-xs flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                      {new Intl.NumberFormat('es-ES', { notation: "compact" }).format(relVideo.views)}
                    </p>
                  </div>
                </a>
              ))}
            </div>

            <div class="mt-8 p-6 bg-gradient-to-br from-brand-gold/10 to-transparent rounded-2xl border border-brand-gold/20 text-center">
              <p class="font-['Great_Vibes'] text-2xl text-brand-gold mb-2">¿Te gustó?</p>
              <p class="text-white/60 text-sm mb-4">Comparte este video con alguien especial hoy.</p>
              <ButtonPrimary 
                text="Compartir ahora"
                href={whatsappLink}
                onClick={`window.open('${whatsappLink}', '_blank')`}
                className="!py-2 !px-4 !text-xs w-full justify-center !bg-brand-black !text-brand-gold border !border-brand-gold/30 hover:!bg-brand-gold hover:!text-brand-black"
              />
            </div>
          </div>
        </div>

      </div>
    </div>
  </article>
</Layout>