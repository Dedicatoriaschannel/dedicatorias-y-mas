---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import CelebraHoy from '../components/CelebraHoy.astro';
import VideoGrid from '../components/VideoGrid.astro';
import { getLatestVideos } from '../data/mockVideos';
import { getPriorityCategories } from '../data/categories';

const latestVideos = getLatestVideos(8);
const priorityCategories = getPriorityCategories(4);
---

<Layout>
  <Header />
  
  <!-- Hero Section -->
  <Hero />

  <!-- Celebra Hoy Section (Dynamic Event) -->
  <CelebraHoy />

  <!-- Categories Section -->
  <section class="py-16 bg-gradient-to-b from-transparent to-brand-gray-900/50" id="categorias">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-display text-4xl md:text-5xl font-bold text-white mb-4">
          Explora Por <span class="text-brand-gold">Categoría</span>
        </h2>
        <p class="text-lg text-white/70 max-w-2xl mx-auto">
          Encuentra el video perfecto para cada momento y emoción
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        {priorityCategories.map(category => (
          <a 
            href={`/categoria/${category.slug}`}
            class="group relative bg-gradient-to-br from-brand-gray-800 to-brand-gray-900 border border-brand-gold/20 rounded-2xl p-8 hover:border-brand-gold/50 hover:shadow-gold transition-all duration-300 overflow-hidden"
          >
            {/* Decorative background */}
            <div class="absolute inset-0 bg-brand-gold/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            
            <div class="relative z-10">
              {/* Icon */}
              <div class="text-5xl mb-4 group-hover:scale-110 transition-transform duration-300">
                {category.icon}
              </div>
              
              {/* Title */}
              <h3 class="font-display text-xl font-bold text-white mb-2 group-hover:text-brand-gold transition-colors">
                {category.title}
              </h3>
              
              {/* Description */}
              <p class="text-sm text-white/60 mb-4">
                {category.description}
              </p>
              
              {/* CTA */}
              <div class="flex items-center gap-2 text-brand-gold text-sm font-semibold">
                <span>Explorar</span>
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>

      {/* Ver todas las categorías link */}
      <div class="text-center">
        <a 
          href="/videos"
          class="inline-flex items-center gap-2 text-brand-gold hover:text-brand-gold-light font-medium transition-colors"
        >
          Ver todas las categorías
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Videos Section -->
  <VideoGrid 
    videos={latestVideos}
    title="Últimos Videos"
    subtitle="Los videos más recientes para compartir y emocionar"
    showViewAll={true}
  />

  <!-- CTA Section -->
  <section class="py-20 relative overflow-hidden">
    {/* Background */}
    <div class="absolute inset-0 bg-gradient-to-br from-brand-gold/10 via-transparent to-brand-gold/5"></div>
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-brand-gold/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-brand-gold/5 rounded-full blur-3xl"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-display text-4xl md:text-5xl font-bold text-white mb-6">
          ¿Listo Para <span class="text-brand-gold">Compartir Emociones</span>?
        </h2>
        <p class="text-xl text-white/70 mb-8">
          Descubre nuestra colección completa de videos para cada ocasión especial
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/videos"
            class="px-8 py-4 bg-gold-gradient text-brand-black font-semibold rounded-xl shadow-gold hover:shadow-gold-lg transition-all duration-300 hover:scale-105"
          >
            Ver Todos los Videos
          </a>
          <a 
            href="/sobre-mi"
            class="px-8 py-4 bg-white/5 backdrop-blur-sm border border-brand-gold/30 text-white font-semibold rounded-xl hover:bg-white/10 hover:border-brand-gold/50 transition-all duration-300"
          >
            Conoce Más
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-brand-gray-900 border-t border-brand-gold/10 py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        {/* Brand */}
        <div>
          <img src="/logo.png" alt="Dedicatorias y Más" class="h-10 mb-4" />
          <p class="text-white/60 text-sm">
            La colección más exclusiva de videos motivacionales y dedicatorias para toda ocasión.
          </p>
        </div>

        {/* Links */}
        <div>
          <h3 class="font-display font-semibold text-white mb-4">Navegación</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="/" class="text-white/60 hover:text-brand-gold transition-colors">Inicio</a></li>
            <li><a href="/videos" class="text-white/60 hover:text-brand-gold transition-colors">Videos</a></li>
            <li><a href="/categoria/motivacion-y-superacion" class="text-white/60 hover:text-brand-gold transition-colors">Motivación</a></li>
            <li><a href="/sobre-mi" class="text-white/60 hover:text-brand-gold transition-colors">Sobre Mí</a></li>
          </ul>
        </div>

        {/* Social */}
        <div>
          <h3 class="font-display font-semibold text-white mb-4">Síguenos</h3>
          <div class="flex gap-4">
            <a href="#" class="w-10 h-10 bg-white/5 rounded-full flex items-center justify-center hover:bg-brand-gold/20 hover:text-brand-gold transition-all" aria-label="YouTube">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
            <a href="#" class="w-10 h-10 bg-white/5 rounded-full flex items-center justify-center hover:bg-brand-gold/20 hover:text-brand-gold transition-all" aria-label="Facebook">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="#" class="w-10 h-10 bg-white/5 rounded-full flex items-center justify-center hover:bg-brand-gold/20 hover:text-brand-gold transition-all" aria-label="Instagram">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      {/* Copyright */}
      <div class="border-t border-white/10 pt-8 text-center text-sm text-white/50">
        <p>&copy; {new Date().getFullYear()} Dedicatorias y Más. Todos los derechos reservados.</p>
      </div>
    </div>
  </footer>
</Layout>
