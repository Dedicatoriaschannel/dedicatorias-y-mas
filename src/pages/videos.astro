---
import Layout from '../layouts/Layout.astro';
import VideoGrid from '../components/VideoGrid.astro';
import Footer from '../components/Footer.astro';
import { MOCK_VIDEOS } from '../data/mockVideos';
import { CATEGORIES } from '../data/categories';

// Ordiniamo i video per data (dal più recente)
const allVideos = [...MOCK_VIDEOS].sort((a, b) => 
  new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime()
);
---

<Layout title="Todos los Videos | Dedicatorias y Más">
  <section class="pt-32 pb-12 bg-gradient-to-b from-[#0F0F0F] to-[#1A1A1A] border-b border-brand-gold/5 relative overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full bg-[url('/grid-pattern.svg')] opacity-[0.03]"></div>
    <div class="absolute top-10 right-10 w-64 h-64 bg-brand-gold/5 rounded-full blur-[100px] pointer-events-none"></div>

    <div class="container mx-auto px-4 text-center relative z-10">
      <span class="inline-block py-1 px-3 rounded-full bg-brand-gold/10 border border-brand-gold/20 text-brand-gold text-xs font-bold uppercase tracking-widest mb-4 animate-fade-in">
        Catálogo Completo
      </span>
      
      <h1 class="font-display text-4xl md:text-6xl font-bold text-white mb-6 animate-fade-in delay-100">
        Nuestra Colección <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-gold via-brand-gold-light to-brand-gold">Exclusiva</span>
      </h1>
      
      <p class="text-white/60 max-w-2xl mx-auto text-lg font-light mb-10 animate-fade-in delay-200">
        Explora todos nuestros videos de motivación, amor y fe. Encuentra el mensaje perfecto para dedicar hoy.
      </p>
      
      <div class="flex flex-wrap justify-center gap-3 animate-fade-in delay-300 max-w-4xl mx-auto">
        <a 
          href="/videos" 
          class="px-6 py-2.5 bg-brand-gold text-brand-black rounded-full text-sm font-bold shadow-[0_0_20px_rgba(212,175,55,0.3)] transform scale-105 transition-all"
        >
          Todos
        </a>
        {CATEGORIES.map(cat => (
          <a 
            href={`/categoria/${cat.slug}`} 
            class="px-6 py-2.5 bg-white/5 border border-white/10 text-white/70 hover:text-white hover:border-brand-gold/50 hover:bg-white/10 rounded-full text-sm transition-all duration-300"
          >
            {cat.title}
          </a>
        ))}
      </div>
    </div>
  </section>

  <div class="bg-[#0F0F0F] min-h-screen">
    <VideoGrid 
      videos={allVideos} 
      subtitle="Explora todo el contenido"
    />
  </div>

  <Footer />
</Layout>
